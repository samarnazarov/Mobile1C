/* -------------------------------------------------------------------- 
 Общие стили
-------------------------------------------------------------------- */

body 
{
	margin: 0px 0px 0px 0px;
	padding: 0px 0px 0px 0px;
	background: #ffffff; 
	color: #000000;
	font-family: Verdana, Arial, Helvetica, sans-serif;
	font-size: 70%;
	width: 100%;
/*
	scrollbar-3dlight-color: #eae5d8; 
	scrollbar-darkshadow-color: #eae5d8; 
	scrollbar-arrow-color: black; 
	scrollbar-base-color: #e3ded1; 
	scrollbar-face-color: #e3ded1; 
	scrollbar-highlight-color: #898477; 
	scrollbar-shadow-color: #898477;
*/
}

table
{
	font-size: 100%;
}

div#V8TopicString 
{
	padding: 0px 10px 0px 22px; 
	background-color: #FFFFFF;  
	border-bottom: 0px solid #000000;      
}

div#V8TopicArea
{
	position: relative;
	left: 0px;
	padding: 0px 0px 0px 0px;
	border-bottom: 1px solid #999999;
}

div#V8TextArea 
{
	padding: 5px 10px 0px 22px;
}

/* --------------------------------------------------------------------
 Стили заголовков
-------------------------------------------------------------------- */

h1, h2, h3, h4
{
	font-family: Verdana, Arial, Helvetica, sans-serif;
	margin-bottom: .4em; 
	margin-top: 1em;
	font-weight: bold;
}

h1
{
	font-size: 160%;
	margin-top: 0em;
}

h2
{
	font-size: 140%;
}

h3
{
	font-size: 120%;
	margin-bottom: 0em;
}

h4
{
	font-size: 100%;
}

h1.V8TopicText
{
	margin-left: -18px;
	color: #00008B
}

/* --------------------------------------------------------------------
 Стили текста
-------------------------------------------------------------------- */

p
{
	margin-top: 0em;	
}

.Usual
{
	margin-top: 0.5em;	
	margin-bottom: 0em;	
	margin-left: 0em;	
	margin-right: 0em;	
}

/* --------------------------------------------------------------------
 Стили списков
-------------------------------------------------------------------- */

ol, ul
{
	margin: .5em 0em 0em 3em; 
}

li
{
	margin-bottom: .5em;
}

ul p, ol p, dl p
{
	margin-left: 0em;
}

ul p.label, ol p.label
{
	margin-top: .5em;
}

/* --------------------------------------------------------------------
  Стили списка определений
-------------------------------------------------------------------- */

dl
{
	margin-top: 0em; 
	padding-left: 1px; 
}

dd
{
	margin-bottom: 0em;  
	margin-left: 1.5em; 
}

dt
{
	margin-top: .5em; 
}

/* --------------------------------------------------------------------
  Стили для исходного кода
-------------------------------------------------------------------- */

pre
{
	margin-top: .5em;
	margin-bottom: .5em; 
}

pre, SourceCode, .SourceCode
{
	font: 100% Monospace, Courier New, Courier; 
	color: #000066;
}

pre b, SourceCode b
{
	letter-spacing: .1em; 
}

pre.SyntaxDescription
{
	background: #cccccc;
	padding: 4px 8px;
	cursor: text;
	margin-top: 1em;
	margin-bottom: 1em; 
	color: #000000;
	border-width: 1px;
	border-style: solid;
	border-color: #999999;
}

.Important	
{
	background: #ffffff;
	padding: 4px 8px;
	cursor: text;
	margin-top: 1em;
	margin-bottom: 1em; 
	color: #000000;
	border-width: 1px;
	border-style: solid;
	border-color: #000000;
	font: 100% Verdana;
}

/* --------------------------------------------------------------------
 Стили ссылок
-------------------------------------------------------------------- */

a:link
{
	color: #0000ff;
}

a:visited
{
	color: #0000ff;
}

a:hover
{
	color: #3366ff;
}

/* --------------------------------------------------------------------
 Табличные стили
--------------------------------------------------------------------- */

table.SimplyTable
{
	margin: 0px 0px 10px 0px;
	cellspacing: 0.5;
	background-color: #DCDCDC;
}

td.NarrowColumn
{
	font: 70% Verdana;
	width: 30%;
	background-color: #FFFFFF; 
}

td.WideColumn
{
	font: 70% Verdana;
	width: 70%;
	background-color: #FFFFFF; 
}

td.NormalColumn
{
	font: 70% Verdana;
	width: 50%;
	background-color: #FFFFFF; 
}

td.NarrowHeading
{
	font: 70% Verdana;
	width: 30%;
	background-color: #DCDCDC; 
}

td.WideHeading
{
	font: 70% Verdana;
	width: 70%;
	background-color: #DCDCDC; 
}

td.NormalHeading
{
	font: 70% Verdana;
	width: 50%;
	background-color: #DCDCDC; 
}

/* --------------------------------------------------------------------
 Стили для специальных термов.
-------------------------------------------------------------------- */

strong.ControlElement
{
	color: #000040;
}

strong.ShortCut
{
	color: #990000;
}

/* --------------------------------------------------------------------
 Подвал
-------------------------------------------------------------------- */

div.V8Cellar
{
    position: relative;
}

div.V8Cellar hr
{
	color: #999999;
	height: 1px;
}

table.V8CellarTable
{
    table-layout: fixed;
    font-style: italic;
	left: 0px;
	top: 0px;
	padding-left: 5px;
	padding-top: 5px;
	padding-right: 20px;
	padding-bottom: 5px;
	margin: 0px 0px 0px 0px;
}

table.V8CellarTable td.V81CCopyright 
{   
    text-align: right;                    
}

/* --------------------------------------------------------------------
 Стили для заголовков
--------------------------------------------------------------------- */

table.V8TitleTable
{
	position: relative;
	left: 0px;
	top: 0px;
	padding: 0px 0px 0px 0px;
	margin: 0px 0px 0px 0px;
	width: 100%;
	height: 25px; 
	border-collapse: collapse;
	border-style: solid;
	border-width: 0px;
	background-color: #000000; 
	font-size: 100%;
}

table.V8TitleTable td 
{
	margin: 0px 0px 0px 0px;
	padding-left: 5px;
	padding-top: 5px;
	padding-right: 20px;
	padding-bottom: 5px;
	vertical-align: top;
	border-width: 0px
	border-style: solid;
	border-color: #999999;
	font-weight: bold;
	font-size: 120%;
	color: #B22222;
	background-color: #FAFAD2; 
}

table.V8TitleTable td.V8Config a
{                      
	color: #B22222;
}

table.V8TitleTable td.V8Product 
{                       
	text-align: right;
	vertical-align: top;
	padding-left: 0px;
	padding-top: 5px;
	padding-right: 5px;
	padding-bottom: 5px;
	background-color: #FAFAD2; 
	font-family: Arial, Cursive;
	font-weight: normal;
	font-style: italic;
	width="1%"
}

table.V8TitleTable td.V8Product a
{                       
	font-family: Arial, Cursive;
	font-weight: normal;
	font-style: italic;
	color: #B22222;
}

.V8SH_title { display: none }

